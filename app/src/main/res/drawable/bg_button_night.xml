<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <stroke
            android:width="1dp"
            android:color="@color/colorActionBarNight"/>

        <solid
            android:color="@color/colorEdtNight"/>
        <corners
            android:radius="1dp"/>
    </item>
    <item android:state_pressed="false">
        <stroke
            android:width="1dp"
            android:color="@color/colorActionBarNight"/>

        <solid
            android:color="@color/colorEdtNight"/>
        <corners
            android:radius="1dp"/>
    </item>



</selector>